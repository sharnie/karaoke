<section id="content" class="m-t-lg wrapper-md animated fadeInUp">    
  <div class="container aside-xl">
    <section class="m-b-lg">
      <header class="wrapper text-center">
        <strong>Sign in to get in touch</strong>
      </header>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, class: "form-control rounded input-lg text-center no-border", placeholder: "Email" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: "form-control rounded input-lg text-center no-border", placeholder: "Password" %>
        </div>

        <%= f.submit "Sign in", class: "btn btn-lg btn-warning lt b-white b-2x btn-block btn-rounded" do %>
          <i class="icon-arrow-right pull-right"></i><span class="m-r-n-lg">Sign in</span>
        <% end %>

        <%= content_tag :div, class: "text-center m-t m-b" do %>
          <%= link_to new_user_password_path do %>
            <small>Forgot password?</small>
          <% end %>
        <% end %>

        <div class="line line-dashed"></div>

        <p class="text-muted text-center"><small>Do not have an account?</small></p>

        <%= link_to "Create an account", new_user_registration_path, class: "btn btn-lg btn-info btn-block btn-rounded" %>
      <% end %>
    </section>
  </div>
</section>